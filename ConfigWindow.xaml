<Window x:Class="Sand_Simulation_with_WPF.ConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sand_Simulation_with_WPF"
        mc:Ignorable="d"
        Title="Configuration"
	Height="650" Width="450">

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="0.15*"/>
			<RowDefinition Height="0.2*"/>
			<RowDefinition Height="0.65*"/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="0.3*"/>
			<ColumnDefinition Width="0.3*"/>
			<ColumnDefinition Width="0.3*"/>
		</Grid.ColumnDefinitions>
		

		<TextBlock FontSize="30" FontWeight="Bold"
			   HorizontalAlignment="Center"
			   VerticalAlignment="Center"
			   Grid.Row="0" Grid.Column="1">
			Cells
		</TextBlock>

		<Button Content="Sand" Background="Yellow"
			Grid.Row="1" Grid.Column="0"
			Margin="20"
			Click="ChangeCellBrush"/>
		<Button Content="Water" Background="BLue" 
			Grid.Row="1" Grid.Column="1"
			Margin="20"
			Click="ChangeCellBrush"/>
	</Grid>
</Window>
